<body>
    {{!-- Importation du Partial Navbar --}}
    {{> navbar }}


    {{!-- Flash Bannière ROUGE Error après le remplissage du formulaire de la page Login --}}
    {{#if error }}
    <div id='flash' class="position-relative" style="z-index: 1000; top: 80px">
        <div class="position-absolute top-0 start-50 translate-middle alert alert-danger mt-5" role="alert">
            <p>Error: {{ error }} </p>
        </div>
    </div>

    {{!-- setTimeout permettant de garder la bannière ROUGE Error active pendant 2 secondes ! = 2000 --}}
    <script>
        setTimeout(() => {
            document.getElementById('flash').style = 'visibility: hidden;'
        }, 2000)
    </script>
    {{/if }}

    {{!-- Flash Bannière VERT Validation du compte après remplissage du formulaire de la page Login --}}  
    {{#if success }}
    <div id='flash' class="position-relative" style="z-index: 1000; top: 80px">
        <div class="position-absolute top-0 start-50 translate-middle alert alert-success mt-5" role="alert">
            <p>Success: {{ success }} </p>
        </div>
    </div>

    {{!-- setTimeout permettant de garder la bannière VERT active pendant 2 secondes ! = 2000 --}}
    <script>
        setTimeout(() => {
            document.getElementById('flash').style = 'visibility: hidden;'
        }, 2000)
    </script>
    {{/if }}



    {{!-- Templating de nos Pages --}}
    {{{ body }}}

    {{!-- Ouverture de la condition footer avec le croisillon # et Fermeture de la Condition Footer avec le slash / --}}
    {{#if noFooter }}

    {{else }}
    <!-- Manipulation du Footer -->
    <footer class="container-fluid">
        <div class="copyright">
            <p class="elite">Elite S Compagny 2.0 - Edition Maquette 2021.</p>
            <ul>
                <li><i class="fab fa-facebook-f"></i></li>
                <li><i class="fab fa-twitter"></i></li>
                <li><i class="fab fa-instagram"></i></li>
                <li><i class="fab fa-linkedin-in"></i></li>
                <li><i class="fab fa-youtube"></i></li>
            </ul>
            <div class="legal-notice">
                <a href="/legalnotice" role="button">Mentions Légales</a>
            </div>
        </div>
    </footer>

    {{!-- Fermeture de la Condition du Footer avec le slash / --}}
    {{/if }}

</body>

