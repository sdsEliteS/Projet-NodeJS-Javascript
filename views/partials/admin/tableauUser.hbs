<!-- Accordeon Liste User -->
<div class="accordion-item">
    <h2 class="accordion-header" id="headingTwo">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo"
            aria-expanded="false" aria-controls="collapseTwo">
            Liste Utilisateur
        </button>
    </h2>
    <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo"
        data-bs-parent="#accordionExample">
        <div class="accordion-body">
            <table class="table table-dark table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Avatar</th>
                        <th scope="col">Pseudo</th>
                        <th scope="col">Verified</th>
                        <th class="text-center" scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>

                    {{!-- Ouverture de la methode each (boucle) avec le # (Voir le Readme) --}}
                    {{#each users }}

                    <!-- Item 1 du tableau -->
                    <tr class="table-info">
                        <th>{{ this.id}}</th>
                        <td class="pt-0 pb-0 text-left align-middle">
                            <img class="rounded-circle" src="https://picsum.photos/35" alt="">
                        </td>
                        <td>{{ this.pseudo }}</td>
                        <td>True</td>
                        <td>
                            <div class="d-flex justify-content-evenly">
                                <!-- Bouton Edit Open Modal Edit Validation User -->
                                <button type="button" class="btn btn-warning" data-bs-toggle="modal"
                                    data-bs-target="#exampleModal-2{{ this.id}}" data-bs-whatever="@mdo">
                                    <i class="fas fa-edit"></i></button>

                                <!-- Ajout début du Modal Edit Validation User dans le bouton Warning -->
                                <div class="modal fade" id="exampleModal-2{{ this.id}}" tabindex="-1"
                                    aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">
                                                    Editer "Utilisateur"</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                    aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                {{!-- Methode PUT pour Editer Utilisateur --}}
                                                <form action="/editer/{{ this.id }}?_method=PUT" method="POST">
                                                {{!-- Methode PUT pour Editer Utilisateur --}}
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <label for="recipient-name" class="col-form-label">Pseudo
                                                                :</label>
                                                            {{!-- Ne pas oublier d'écrire le "name" dans les input en rapport avec la methode PUT --}}
                                                            <input type="text" name="pseudo" class="form-control" placeholder="Titre"
                                                                id="recipient-name">
                                                        </div>
                                                        <div class="col-md-6">
                                                            <label for="message-text" class="col-form-label">Email
                                                                :</label>
                                                            {{!-- Ne pas oublier d'écrire le "name" dans les input en rapport avec la methode PUT --}}
                                                            <input type="text" name="email" class="form-control" placeholder="Email"
                                                                id="recipient-name">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <label for="recipient-name" class="col-form-label">Avatar
                                                            :</label>
                                                        {{!-- Ne pas oublier d'écrire le "name" dans les input en rapport avec la methode PUT --}}
                                                        <input type="text" name="avatar" class="form-control" placeholder="Avatar"
                                                            id="recipient-name">
                                                    </div>
                                                    <div class="col-md-12">
                                                        <label for="recipient-name" class="col-form-label"></label>
                                                        {{!-- Ne pas oublier d'écrire le "name" dans les input en rapport avec la methode PUT --}}
                                                        <textarea id="message" name="description" rows="5" placeholder="Description"
                                                            class="contact-message">{{ this.description }}</textarea>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <div class="contact-form text-center mb-5">
                                                            {{!-- Methode POST : Ne pas oublier le type SUBMIT qui est un bouton d'envoi qui soumet toutes les valeurs du formulaire lors de l'envoi à un gestionnaire de formulaire (Server) validant la balise ouvrante fermante "form" --}}
                                                            <button type="submit" class="btn-or mt-3">Validation</button>
                                                        </div>
                                                    </div>
                                                </form>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- Fin du Modal Edit User -->

                                <!-- Bouton DANGER Open Modal Delete (Suppression) User -->
                                <button type="button" class="btn btn-dark" data-bs-toggle="modal"
                                    data-bs-target="#modalBanishUser{{ this.id }}">
                                    <i class="fas fa-ban"></i>
                                </button>
                                <!-- Ajout début du Modal Suppression du Message dans le Bouton DANGER -->
                                <div class="modal fade" id="modalBanishUser{{ this.id }}" tabindex="-1"
                                    aria-labelledby="labelModalBanishUser" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="labelModalBanishUser">
                                                    {{ this.title }}
                                                </h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                    aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                {{ this.message2 }}
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary"
                                                    data-bs-dismiss="modal">Annuler</button>
                                                <button type="button" class="btn btn-primary">Oui</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- / Fin du Modal Suppression User -->

                                <!-- Bouton DANGER Open Modal Delete (Suppression) User -->
                                <button type="button" class="btn btn-danger" data-bs-toggle="modal"
                                    data-bs-target="#modalDeleteUser{{ this.id }}">
                                    <i class="far fa-times-circle"></i>
                                </button>
                                <!-- Ajout début du Modal Suppression du Message dans le Bouton DANGER -->
                                <div class="modal fade" id="modalDeleteUser{{ this.id }}" tabindex="-1"
                                    aria-labelledby="labelModalDeleteUser" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="labelModalDeleteUser">
                                                    {{ this.title }}
                                                </h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                    aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                {{ this.message }}
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary"
                                                    data-bs-dismiss="modal">Annuler</button>
                                                <button type="button" class="btn btn-primary">Oui</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- / Fin du Modal Suppression User -->
                            </div>
                        </td>
                    </tr>

                    {{/each }}

                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- / Accordeon Liste User -->
