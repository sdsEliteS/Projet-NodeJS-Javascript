<!-- Accordeon Liste User -->
<div class="accordion-item">
    <h2 class="accordion-header" id="headingTwo">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo"
            aria-expanded="false" aria-controls="collapseTwo">
            Liste Utilisateur
        </button>
    </h2>
    <div id="collapseTwo" class="accordion-collapse collapse {{ openUser }}" aria-labelledby="headingTwo"
        data-bs-parent="#accordionExample">
        <div class="accordion-body">
            <table class="table table-dark table-hover">
                <thead>
                    <tr>
                        <th class="font-size" scope="col">#</th>
                        <th class="font-size" scope="col">Avatar</th>
                        <th class="font-size" scope="col">Pseudo</th>
                        <th class="font-size" scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>

                    {{!-- Ouverture de la methode each (boucle) avec le # (Voir le Readme) exploitant les données de mydb en rapport avec les colonnes de la Table User --}}
                    {{#each users }}

                    <!-- Item 1 du tableau -->
                    <tr class="table-info">
                        {{!-- Incrémentation Tableau Helpers --}}
                        <th scope="row">{{inc @index}} : {{ this.id }}</th>
                        <td class="pt-0 pb-0 text-left align-middle">
                            <img class="rounded-circle" style="height: 33px;" src="/assets/images/{{ this.avatar }}" alt="">
                        </td>
                        <td class="font-size2">{{ this.pseudo }}</td>
                        <td>
                            <div>
                                <!-- Bouton Edit Open Modal Edit Validation User -->
                                <button type="button" class="btn btn-warning" data-bs-toggle="modal"
                                    data-bs-target="#exampleModal-2{{ this.id }}" data-bs-whatever="@mdo">
                                    <i class="fas fa-edit"></i>
                                </button>
                                
                                {{!-- Chemin pour retrouver le fichier handlebars modalEditUser qu'on exporte afin de parser le code (Code plus lisible) --}}
                                {{> modal/modalEditUser user=this }}
                            
                                <!-- Fin du Modal Edit User -->

                            
                                <!-- Bouton DANGER Open Modal Delete (Suppression) User -->
                                <button type="button" class="btn btn-danger" data-bs-toggle="modal"
                                    data-bs-target="#modalDeleteUser{{ this.id }}">
                                    <i class="far fa-times-circle"></i>
                                </button>
                                <!-- Ajout début du Modal Suppression du Message dans le Bouton DANGER -->
                                <div class="modal fade" id="modalDeleteUser{{ this.id }}" tabindex="-1"
                                    aria-labelledby="labelModalDeleteUser" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="labelModalDeleteUser">
                                                    Utilisateur {{ this.id }}
                                                </h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                    aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                Etes-vous sûr de vouloir supprimer cet
                                                utilisateur ?
                                            </div>
                                            <div class="modal-footer">
                                                {{!-- Methode DELETE : Ne pas oublier le type SUBMIT qui est un
                                                bouton d'envoi qui soumet toutes les valeurs du formulaire
                                                lors de l'envoi à un gestionnaire de formulaire (Server)
                                                validant la balise ouvrante fermante "form" --}}
                                                <form action="/editer/{{ this.id }}?_method=DELETE" method="POST">
                                                    <button class="btn btn-secondary"
                                                        data-bs-dismiss="modal">Annuler</button>
                                                    <button type="submit" class="btn btn-primary">Oui</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- / Fin du Modal Suppression User -->
                            </div>
                        </td>
                    </tr>

                    {{/each }}

                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- / Accordeon Liste User -->
