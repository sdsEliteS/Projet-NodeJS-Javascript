<!-- Manipulation Liste de Commentaires CLients -->

<section>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="bordure pt-5 pb-5">
                    <h4 class="titre-neon-special mt-3">Liste Commentaire CLients</h4>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="list-group">

                    {{!-- Création Commentaire - Rentrant dans le cadre d'une répétition alors une boucle {{#each }} {{/each}} s'impose  --}}
                    {{#each comments }}

                    <div href="#" class="mb-1 mt-1 list-group-item text-black bg-warning">
                        <div class="d-flex w-100 justify-content-between">
                            <img src="{{ this.avatar }}" style="height: 50px; widht: 50px">
                            <h5 class="mb-1"> <u>{{ this.pseudo }}</u> le: [ 22-25-22 ]</h5>
                            <!-- Button modal -->
                            <button type="button" class="btn btn-light" data-bs-toggle="modal"
                                data-bs-target="#modalDeleteButton1">
                                Supprimer
                            </button>

                            <!-- Modal Animation -->
                            <div class="modal fade" id="modalDeleteButton1" data-bs-backdrop="static"
                                data-bs-keyboard="false" tabindex="-1" aria-labelledby="modalDeleteButton1Label"
                                aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="modalDeleteButton1Label">
                                                Supprimer Commentaire </h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            Etes-vous sûr de vouloir supprimer ce commentaire ?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-bs-dismiss="modal">Annuler</button>
                                            <button type="button" class="btn btn-primary">Oui</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <p class="mb-1 d-flex justify-content-start"> {{ this.content }} </p>
                    </div>

                    {{/each }}

                </div>
            </div>
        </div>
    </div>
</section>