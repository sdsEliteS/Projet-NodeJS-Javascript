                        Editée le : {{ moment ballon.dateEdit format="DD/MM/YYYY - HH:mm:ss" }}
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="container">
        <div class="row">
            <div class="col-md-12 pt-5">
                <div class="bordure encadrer pt-4">
                    <h2 class="titre-neon-special pt-2">{{ ballon.title }}</h2>
                </div>
                <div class="encadrer pt-3">
                    <p class="text-center">{{ ballon.description }}</p>
                </div>
            </div>
        </div>
    </div>
</section>